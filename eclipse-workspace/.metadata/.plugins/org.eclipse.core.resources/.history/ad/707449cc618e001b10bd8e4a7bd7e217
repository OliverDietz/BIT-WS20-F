
public class Textplayer {
  private String text;
  private int anzahlWiederholungen=0;
  
  public void setText(String Text) {
	text=Text;  
}
  public String getText() {
	  return(text);
}
  public void abspielen() {
	  for(int anzahlWiederholungen;anzahlWiederholungen<0; anzahlWiederholungen--) {
		  System.out.println(text);
	  }
	  
}
  public void setAnzahl(int Wiederholungen) {
	  anzahlWiederholungen=Wiederholungen;
	  
	  
}
  public int getAnzahl() {
	  return(anzahlWiederholungen);
}
}